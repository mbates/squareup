{
  "name": "@bates-solutions/squareup",
  "version": "1.3.0",
  "description": "TypeScript wrapper for Square API with webhook support for Node.js backends",
  "type": "module",
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "square",
    "square-api",
    "payments",
    "payment-processing",
    "typescript",
    "nodejs",
    "backend",
    "webhooks",
    "ecommerce",
    "point-of-sale",
    "pos",
    "sdk",
    "api"
  ],
  "author": "Bates Solutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbates/squareup.git"
  },
  "bugs": {
    "url": "https://github.com/mbates/squareup/issues"
  },
  "homepage": "https://github.com/mbates/squareup#readme",
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "square": "^43.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "semantic-release": "^25.0.2",
    "square": "^43.2.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
